<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="olive">
        <color rgba="0.5 0.5 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- base_link -->
    <link name="base_link">
    </link>

     <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <!-- chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis_link">
        <visual>
            <geometry>
                <box size="0.4 0.3 0.15"/>
            </geometry>
            <material name="black"/>
            <origin xyz="0.20 0 0.075" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.3 0.15"/>
            </geometry>
            <origin xyz="0.20 0 0.075" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.4" y="0.3" z="0.15">
            <origin xyz="0.20 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--Macro Wheel-->
    <xacro:macro name="wheel_link" params="prefix place">
        <link name="${prefix}_wheel_${place}_link">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.04" />
                </geometry>
                <material name="yellow" />
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.05" length="0.04" />
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0" />
            </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0" />
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="${prefix}_wheel_${place}_link">
            <material>Gazebo/Yellow</material>
        </gazebo>
    </xacro:macro>

    <!--Left Wheel Front-->
   <joint name="left_wheel_front_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_front_link" />
        <origin xyz="0.2 0.175 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <xacro:wheel_link prefix="left" place="front" />

    <!--Left Wheel back-->
    <joint name="left_wheel_back_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_back_link" />
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <xacro:wheel_link prefix="left" place="back" />

    <!--Right Wheel Front-->
    <joint name="right_wheel_front_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_front_link" />
        <origin xyz="0.2 -0.175 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <xacro:wheel_link prefix="right" place="front" />

     <!--right Wheel Back-->
    <joint name="right_wheel_back_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_back_link" />
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <xacro:wheel_link prefix="right" place="back" />

</robot>